<h1> {{model.title}} </h1>
<h2> {{model.description}} </h2>
<h3> Public: {{model.public}} </h3>

<div class="row">
    <div class="col-xs-4">
        {{file-browser
            rootItem=model
            openFile=(action 'openFile')
        }}
    </div>
    <div class="col-xs-8">
        {{#file-renderer download=downloadUrl
            width="800" height="1000"}}
        {{/file-renderer}}
    </div>
</div>